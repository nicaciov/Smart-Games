@using System.Globalization
@{
    ViewData["Title"] = "Boas vindas à Smart Games";
}

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Título legal</h1>
        <p class="lead font-weight-normal">E uma descrição engraçadinha, para continuar. Alavanque seus esforços em marketing com esse exemplo, baseado nas páginas de marketing da Apple.</p>
        <a class="btn btn-outline-secondary" href="#">Em breve</a>
    </div>
    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>

<section id="jogos" class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">

            @foreach (var item in ViewBag.listAllGames)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top img-fluid" src="data:image/png;base64,@item.photo" alt="...">
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.game_name</h5>
                                <!-- Product price-->
                                <p>@item.game_price.ToString("C", new CultureInfo("pt-BR"))</p>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" data-toggle="modal" data-target="#modalDetalhes@(item.id)">Ver mais</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@foreach (var item in ViewBag.listAllGames)
{
    <!-- Modal exclusivo para cada jogo -->
    <div class="modal fade" id="modalDetalhes@(item.id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h5>Detalhes do Jogo: @item.game_name</h5>
                    <p>Preço: @item.game_price.ToString("C", new CultureInfo("pt-BR"))</p>
                    <!-- Adicione outros detalhes conforme necessário -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
}
